application.context = <%= node['sophos_cloud']['context'] %>
application.cluster = <%= node['sophos_cloud']['cluster'] %>
application.overwriteConfiguration = false

mongoDb.cfg.addresses = <%= @mongodb_addresses %>
mongoDb.cfg.database = configuration
mongoDb.cfg.useSSL = true
mongoDb.cfg.source = admin
mongoDb.cfg.username = <%= @mongodb_username %>
mongoDb.cfg.password = <%= @mongodb_password %>

application.waitFor = <%= @mongodb_addresses %>,<%= @redis_addresses %>

keystore.addresses = <%= @keystore_addresses %>

