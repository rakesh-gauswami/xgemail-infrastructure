<match raw.postfix.maillog>
  @type rewrite_tag_filter
  <rule>
    key message
    pattern  <%= @maillog_filter_patterns %>
    tag clear
  </rule>
  <rule>
    key message
    pattern .+
    tag sophos.xgemail.<%= @application_name %>.maillog
  </rule>
</match>

<match clear>
  @type null
</match>
