check process postfix with pidfile /storage/postfix-<%= @instance_name %>/pid/master.pid
  group mail
  start program = "/etc/init.d/postfix start"
  stop  program = "/etc/init.d/postfix stop"

check process postfixStats with pidfile /var/run/postfixStats-updater.pl.pid
  group mail
  start program = "/etc/init.d/postfixStats start"
  stop  program = "/etc/init.d/postfixStats stop"