# This script collects Postfix queue lengths and adds to Cloudwatch metrics
#

for sub_dir in \
  \
  active \
  deferred \
  incoming
do
  queue_count=$( find "/storage/postfix-<%= @instance_name %>/${sub_dir:?nd}" -type f | wc -l )
  echo "${sub_dir:?nd}: ${queue_count:?nd}"
  aws --region <%= @aws_region %> cloudwatch put-metric-data --metric-name "postfix_${sub_dir}_queue" --dimensions InstanceId="<%= @instance_id %>" --namespace "EC2" --value $(echo $(($(postmulti -i postfix-<%= @instance_name %> -x mailq | grep -Po "(?<=in )([0-9]+)"))))
done