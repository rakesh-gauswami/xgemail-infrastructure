{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "IAM policy for Read-Only Access to an S3 Bucket",

  "Metadata": {
    "Copyright": [
      "Copyright 2018, Sophos Limited. All rights reserved.",
      "",
      "'Sophos' and 'Sophos Anti-Virus' are registered trademarks of",
      "Sophos Limited and Sophos Group.  All other product and company",
      "names mentioned are trademarks or registered trademarks of their",
      "respective owners."
    ]
  },

  "Parameters": {
    "Environment": {
      "Description": "Name of the AWS account. inf, dev, qa, prod",
      "Type": "String"
    },
    "XgemailCustomerSubmitBucketName": {
      "Description": "Name of the customer submit bucket",
      "Type": "String"
    },
    "PolicyName" : {
      "Description" : "Policy name (unique per role) which should be attached to the role",
      "Type" : "String"
    },
    "ApiInstRole" : {
      "Description" : "API Role to which this policy should be attached",
      "Type" : "String"
    }
  },

  "Resources": {
    "Policy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid":"BucketReadPermissions",
              "Effect": "Allow",
              "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
              ],
              "Resource" : [
                { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "XgemailCustomerSubmitBucketName" }, "/*"]]},
                { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "XgemailCustomerSubmitBucketName" }]]}
              ]
            },
            {
              "Sid":"ObjectReadPermissions",
              "Effect": "Allow",
              "Action": [
                "s3:ListObjects",
                "s3:GetObject",
                "s3:GetObjectVersion"
              ],
              "Resource" : [
                { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "XgemailCustomerSubmitBucketName" }, "/*"]]},
                { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "XgemailCustomerSubmitBucketName" }]]}
              ]
            }
          ]
        },
        "PolicyName": [
          {
            "Name": {"Ref": "PolicyName"}
          }
        ],
        "Roles": [
          {
            "Name": {"Ref": "ApiInstRole"}
          }
        ]
      }
    }
  },

  "Outputs": {
    "Name": {
      "Description": "Resource name",
      "Value": { "Ref": "Policy" }
    }
  }
}