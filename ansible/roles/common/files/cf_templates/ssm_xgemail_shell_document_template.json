{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template containing a collection of Xgemail Linux Shell execution Documents",
  "Metadata": {
    "Copyright": [
      "Copyright 2021, Sophos Limited. All rights reserved.",
      "",
      "'Sophos' and 'Sophos Anti-Virus' are registered trademarks of",
      "Sophos Limited and Sophos Group.  All other product and company",
      "names mentioned are trademarks or registered trademarks of their",
      "respective owners."
    ],
    "Comments": [
      "Creates SSM Linux Shell Documents to automate control of various functions on CloudEmail and CloudStation infrastructure."
    ]
  },
  "Resources": {
    "ShellAutomation": {
      "Type": "AWS::SSM::Document",
      "Properties": {
        "DocumentType": "Automation",
        "Content": {
          "schemaVersion": "0.3",
          "assumeRole": { "Fn::GetAtt": [ "ShellAutomationRole", "Arn" ] },
          "description": "This SSM Shell Automation will allow executing of linux shell commands for MailOps activities",
          "parameters": {
            "InstanceType": {
              "type": "String",
              "description": " Select an InstanceType to execute commands",
              "allowedValues": [
                "customer-submit",
                "internet-submit",
                "customer-delivery",
                "xdelivery",
                "internet-delivery",
                "internet-xdelivery",
                "mf-inbound-submit",
                "mf-outbound-submit",
                "mf-inbound-delivery",
                "mf-outbound-delivery",
                "mf-inbound-xdelivery",
                "mf-outbound-xdelivery",
                "delta-delivery",
                "delta-xdelivery",
                "risky-delivery",
                "risky-xdelivery",
                "warmup-delivery",
                "warmup-xdelivery"
              ]
            },
            "LinuxCommand": {
              "type": "String",
              "description": "Enter the linux commands that you want to be executed in selected instances."
            }
          },
          "mainSteps": [
            {
              "name": "getInstanceIds",
              "action": "aws:executeAwsApi",
              "maxAttempts": 3,
              "onFailure": "Abort",
              "inputs": {
                "Service": "ec2",
                "Api": "DescribeInstances",
                "Filters": [
                  {
                    "Name": "tag:Application",
                    "Values": [
                      "{{InstanceType}}"
                    ]
                  },
                  {
                    "Name": "instance-state-name",
                    "Values": [
                      "running"
                    ]
                  }
                ]
              },
              "outputs": [
                {
                  "Name": "InstanceIds",
                  "Selector": "$.Reservations..Instances..InstanceId",
                  "Type": "StringList"
                }
              ],
              "isCritical": "true",
              "nextStep": "ExecuteLinuxCommand"
            },
            {
              "name": "ExecuteLinuxCommand",
              "action": "aws:runCommand",
              "maxAttempts": 3,
              "timeoutSeconds": 3600,
              "inputs": {
                "DocumentName": "AWS-RunShellScript",
                "InstanceIds": [
                  "{{getInstanceIds.InstanceIds}}"
                ],
                "Parameters": {
                  "commands": [
                    "{{LinuxCommand}}"
                  ]
                }
              },
              "isCritical": "true",
              "isEnd": "true"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "AWS::StackName"
                  },
                  "ShellAutomation"
                ]
              ]
            }
          },
          {
            "Key": "Application",
            "Value": "cloudemail"
          },
          {
            "Key": "BusinessUnit",
            "Value": "MSG"
          },
          {
            "Key": "Project",
            "Value": "xgemail"
          },
          {
            "Key": "OwnerEmail",
            "Value": "sophosmailops@sophos.com"
          }
        ]
      }
    },
    "ShellAutomationRole" : {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": {
              "Service": [
                "ec2.amazonaws.com",
                "ssm.amazonaws.com"
              ]
            },
            "Action": [ "sts:AssumeRole" ]
          }]
        },
        "Path": "/",
        "Tags": [
          {
            "Key": "Application",
            "Value": "cloudemail"
          },
          {
            "Key": "BusinessUnit",
            "Value": "MSG"
          },
          {
            "Key": "Name",
            "Value": { "Fn::Join": [ "-", [ { "Ref" : "AWS::StackName" }, "ShellAutomationRole" ] ] }
          },
          {
            "Key": "Project",
            "Value": "xgemail"
          },
          {
            "Key": "OwnerEmail",
            "Value": "sophosmailops@sophos.com"
          }
        ]
      }
    },
    "ShellAutomationRolePolicies": {
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "iam:PassRole"
              ],
              "Effect": "Allow",
              "Resource": [
                "*"
              ]
            },
            {
              "Action": [
                "ec2:DescribeInstances",
                "ec2:DescribeTags"
              ],
              "Effect": "Allow",
              "Resource": [
                "*"
              ]
            },
            {
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:logs:*:*:*"
              ]
            },
            {
              "Action": [
                "ssm:DescribeAutomationExecutions",
                "ssm:DescribeAutomationStepExecutions",
                "ssm:DescribeDocument",
                "ssm:DescribeInstanceInformation",
                "ssm:GetAutomationExecution",
                "ssm:GetCommandInvocation",
                "ssm:GetConnectionStatus",
                "ssm:GetDocument",
                "ssm:ListCommandInvocations",
                "ssm:ListCommands",
                "ssm:ListInstanceAssociations",
                "ssm:ListDocuments",
                "ssm:ListDocumentVersions",
                "ssm:SendCommand",
                "ssm:StartAutomationExecution"
              ],
              "Effect": "Allow",
              "Resource": [
                "*"
              ]
            }
          ]
        },
        "PolicyName": "root",
        "Roles": [ { "Ref": "ShellAutomationRole" } ]
      },
      "Type": "AWS::IAM::Policy"
    }
  },

  "Outputs" : {
     "ShellAutomation": {
      "Description": "SSM Shell Automation helps to execute linux shell commands for MailOperations activities",
      "Value": { "Ref": "ShellAutomation" }
    },
    "ShellAutomationRole": {
      "Description": "Shell Automation role",
      "Value": { "Ref": "ShellAutomationRole" }
    },
    "ShellAutomationRoleArn": {
      "Description": "Shell Automation role ARN",
      "Value": { "Fn::GetAtt" : [ "ShellAutomationRole", "Arn" ] }
    }
  }
}