              "inputs": {
                "InvocationType": "RequestResponse",
                "LogType": "Tail",
                "FunctionName":{ "Ref": "MultiEipRotationLambdaFunction" },
                "Payload":"{\"EC2InstanceId\":\"{{InstanceId}}\"}"
              }
            }
