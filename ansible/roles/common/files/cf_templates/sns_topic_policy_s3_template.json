{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "SNS Topic template.",

  "Metadata": {
    "Copyright": [
      "Copyright 2016, Sophos Limited. All rights reserved.",
      "",
      "'Sophos' and 'Sophos Anti-Virus' are registered trademarks of",
      "Sophos Limited and Sophos Group.  All other product and company",
      "names mentioned are trademarks or registered trademarks of their",
      "respective owners."
    ],

    "Comments": [
      "Not so simply creates SNS topic",
      "Some other frills"
    ]
  },

  "Parameters": {
    "TopicName": {
      "Description": "Name of the SNS topic",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "256",
      "AllowedPattern": "[a-zA-Z0-9_-]+"
    },
    "SnsS3TopicPolicyBucket": {
      "Description": "SNS S3 Topic Policy Bucket",
      "Type" : "String",
      "Default": ""
    },
    "SnsS3TopicPolicyCreate": {
      "Description": "Specify true to create a Topic Policy for S3, otherwise specify false",
      "Type": "String",
      "AllowedValues": [ "true", "false" ],
      "Default": "false"
    },
    "TagApplication": {
      "Description": "Tag for the Application being deployed",
      "Type": "String",
      "Default": ""
    }
  },

  "Conditions": {
    "CreateS3TopicPolicy": {
      "Fn::Equals" : [ { "Ref" : "SnsS3TopicPolicyCreate" }, "true" ]
    }
  },

  "Resources": {
    "SnsTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": { "Ref": "TopicName" },
        "Tags": [
          {
            "Key": "Name",
            "Value": { "Ref": "TopicName" }
          },
          {
            "Key": "Application",
            "Value": { "Ref": "TagApplication" }
          },
          {
            "Key": "BusinessUnit",
            "Value": "MSG"
          },
          {
            "Key": "Project",
            "Value": "xgemail"
          },
          {
            "Key": "OwnerEmail",
            "Value": "sophosmailops@sophos.com"
          }
        ]
      }
    },
    "SnsS3TopicPolicy": {
      "Condition" : "CreateS3TopicPolicy",
      "Type" : "AWS::SNS::TopicPolicy",
      "Properties" : {
        "PolicyDocument" : {
          "Id" : "SnsTopicPolicyDocument",
          "Version" : "2012-10-17",
          "Statement" : [ {
            "Sid" : "sns-topic-policy-document",
            "Effect" : "Allow",
            "Principal" : { "Service": "s3.amazonaws.com" },
            "Action" : "sns:Publish",
            "Resource" : { "Ref": "SnsTopic" },
            "Condition":{
              "ArnEquals": {
                "AWS:SourceArn": {
                  "Fn::Join": ["", ["arn:aws:s3:*:*:",
                    {"Ref": "SnsS3TopicPolicyBucket"}
                  ] ]
                }
              }
            }
          } ]
        },
        "Topics" : [ { "Ref": "SnsTopic" } ]
      }
    }
  },

  "Outputs": {
    "SnsTopicArn": {
      "Description": "ARN of the SNS topic",
      "Value": { "Ref" : "SnsTopic" }
    }
  }
}
