          "Statement": [
            {
              "Sid": "Allow-BetaDeliveryTopicArn",
              "Effect": "Allow",
              "Principal": "*",
              "Action": ["sqs:SendMessage"],
              "Resource": "*",
              "Condition": {
                "ArnEquals": {
                  "aws:SourceArn": {"Ref": "BetaDeliveryTopicArn"}
                }
              }
            }
          ]
        },
        "Queues": [{"Fn::Join": ["", ["https://sqs.", { "Ref" : "AWS::Region" }, ".amazonaws.com/", { "Ref" : "AWS::AccountId" }, "/", { "Ref": "BetaDeliveryQueue" }]]}]
