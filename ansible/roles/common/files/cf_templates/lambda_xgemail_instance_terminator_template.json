{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Creates/Updates/Deletes the Xgemail Instance Terminatorn lambda function stored in S3.",

  "Metadata": {
    "Copyright": [
      "Copyright 2018, Sophos Limited. All rights reserved.",
      "",
      "'Sophos' and 'Sophos Anti-Virus' are registered trademarks of",
      "Sophos Limited and Sophos Group.  All other product and company",
      "names mentioned are trademarks or registered trademarks of their",
      "respective owners."
    ],

    "Comments": [
      "NOTE: The template requires a valid IAM role arn that allows",
      "the lambda code to access AWS resources."
    ]
  },

  "Parameters": {
    "DeadLetterTargetArn": {
      "Description": "Configures how Lambda handles events that it can't process.",
      "Type": "String",
      "Default": ""
    },
    "Environment": {
      "Description": "(dev2, dev3, dev4, dev5, qa, etc...)",
      "Type": "String"
    },
    "FunctionDescription": {
      "Description": "Description for this function.",
      "Type": "String",
      "Default": "Triggered from a CloudWatch Schedule this Lambda function will rotate Elastic Ip Addresses on Xgemail Internet (X)Delivery Instances."
    },
    "FunctionName": {
      "Description": "The name for this function.  Defaults to a unique physical ID.",
      "Type": "String",
      "Default": ""
    },
    "HandlerName": {
      "Description": "The name of the handler declared in source code.",
      "Type": "String"
    },
    "IAMRoleArn": {
      "Description": "The IAM role that Lambda assumes when it runs your code to access AWS services.",
      "Type": "String"
    },
    "MemorySize": {
      "Description": "The amount of memory to allocate for this lambda function (128-1536)",
      "Type": "Number",
      "Default": "256"
    },
    "Runtime": {
      "Description": "The scripting runtime the code runs on.",
      "Type": "String",
      "Default": "python2.7"
    },
    "S3Bucket": {
      "Description": "The S3 bucket where the code has been placed.",
      "Type": "String"
    },
    "S3Key": {
      "Description": "The object key name in S3 (no slash in the beginning).",
      "Type": "String"
    },
    "ScheduleState": {
      "Description": "The state of the scheduled event. ENABLED or DISABLED",
      "Type": "String",
      "Default": "ENABLED",
      "AllowedValues": [
        "ENABLED",
        "DISABLED"
      ]
    },
    "SsmDocumentName": {
      "Description": "The SSM Document Name to pass as a variable to the Lambda Function.",
      "Type": "String"
    },
    "Timeout": {
      "Description": "Timeout in seconds.",
      "Type": "Number",
      "Default": "900",
      "MinValue": "30",
      "MaxValue": "900"
    }
  },

  "Conditions": {
    "HasFunctionName": {
      "Fn::Not": [{ "Fn::Equals": [ { "Ref": "FunctionName" }, "" ] }]
    }
  },

  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": { "Ref": "S3Bucket" },
          "S3Key": { "Ref": "S3Key" }
        },
        "Description": { "Ref": "FunctionDescription" },
        "DeadLetterConfig" : {
          "TargetArn" : { "Ref": "DeadLetterTargetArn" }
        },
        "Environment": {
          "Variables": {
            "SSM_DOCUMENT_NAME": { "Ref": "SsmDocumentName" }
          }
        },
        "FunctionName": {
          "Fn::If": [
            "HasFunctionName",
            { "Ref": "FunctionName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "Handler": { "Ref": "HandlerName" },
        "Role": { "Ref": "IAMRoleArn" },
        "Runtime": { "Ref": "Runtime" },
        "Timeout": { "Ref": "Timeout" },
        "MemorySize": {"Ref": "MemorySize"},
        "Tags": [
          {
            "Key": "Application",
            "Value": "CloudEmail",
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "BusinessUnit",
            "Value": "MSG",
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Name",
            "Value": { "Ref": "FunctionName" },
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "OwnerEmail",
            "Value": "sophosmailops@sophos.com",
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Project",
            "Value": "xgemail",
            "PropagateAtLaunch": "true"
          }
        ]
      }
    },

    "LambdaFunctionVersion": {
      "Type": "AWS::Lambda::Version",
      "DependsOn": "LambdaFunction",
      "Properties": {
        "Description": {
          "Fn::Join": [ "", [
            "Sophos Central code: ",
            { "Ref": "HandlerName" }
          ]]
        },
        "FunctionName": { "Fn::GetAtt": [ "LambdaFunction", "Arn" ] }
      }
    }
  },

  "Outputs": {
    "LambdaFunction": {
      "Description": "The Lambda Function's Name.",
      "Value": { "Ref": "LambdaFunction" }
    },
    "LambdaFunctionArn": {
      "Description": "ARN of the function created.",
      "Value": { "Fn::GetAtt": [ "LambdaFunction", "Arn" ] }
    }
  }
}